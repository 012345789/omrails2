<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%-# image_tag @pin.image -%>
			<p>
			  <%= @pin.description %>
			</p>
			<p>
				<%= link_to 'Download Essay File', @pin.document.url , class: "btn btn-info" %>
				<%-# link_to 'Download Essay File', download_pin_path(@pin) , class: "btn btn-info" -%>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
		<p>
			<%= @pin.user.name %>
		</p>
		<p>
			Last update: <%= @pin.document_updated_at %>
		</p>
	</div>
</div>
