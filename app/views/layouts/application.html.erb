<!DOCTYPE html>
<html>
<!-- this application page is loaded for every single page on the site -->
<head>
  <title>SpoonRocket Rails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
		<% end %>
		<%= yield %>
		<!-- yields to the content of the page that application file is applying to -->

		<%= render 'layouts/footer' %>
	</div>
</body>
</html>
